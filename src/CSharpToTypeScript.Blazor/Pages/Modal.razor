<div class="modal @ActiveCssClass">
    <a href="#" class="modal-overlay" aria-label="Close" @onclick="OnCloseRequested"></a>
    <div class="modal-container bg-dark">
        <div class="modal-header text-light">
            <button type="button" class="btn btn-clear float-right" aria-label="Close" @onclick="OnCloseRequested"></button>
            <div class="modal-title h5">@Title</div>
        </div>
        <div class="modal-body">
            <div class="content">
                @ChildContent
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public bool IsActive { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public EventCallback OnCloseRequested { get; set; }

    protected string ActiveCssClass => IsActive ? "active" : string.Empty;
}